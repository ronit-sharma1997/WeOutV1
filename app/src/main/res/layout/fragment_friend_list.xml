<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendFragment">


<androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerViewMyFriends"
    android:name="com.example.sampletoolbar.FriendFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin16dp"
    android:layout_marginRight="@dimen/margin16dp"
    app:layoutManager="LinearLayoutManager"
    tools:context=".FriendFragment"
    tools:listitem="@layout/fragment_friend" />

    <TextView
        android:id="@+id/emptyRecyclerViewMyFriendsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emptyViewMyFriends"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>