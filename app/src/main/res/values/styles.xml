<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFF</item>
        <item name="android:datePickerDialogTheme">@color/lightBlue</item>
    </style>

    <style name="FriendsTabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/lightBlue</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/lightBlue</item>
        <item name="colorControlNormal">@color/lightBlue</item>
        <item name="colorControlActivated">@color/lightBlue</item>
    </style>

    <style name="LoginTextInput" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#FFF</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
    </style>

    <style name="CreateEventTextInput" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#000</item>
        <item name="colorControlNormal">#000</item>
        <item name="colorControlActivated">#000</item>
    </style>

    <style name="DialogTheme" parent= "Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/lightBlue</item>
    </style>


</resources>
